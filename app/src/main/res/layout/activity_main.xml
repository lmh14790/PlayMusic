<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myImport"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context="com.yztc.playmusic.MainActivity"
    android:background="#55ff0000"
    android:clickable="true"
    >


     <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
     <TextView
        android:id="@+id/showCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <SeekBar
        android:id="@+id/seekBar"
        android:progress="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"/>
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="20dp"
        app:cardMaxElevation="50dp"
        app:cardCornerRadius="20dp"
        app:contentPadding="5dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/previous"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/previous"
            android:text="上一首"
            android:layout_weight="1"
            />
    <ImageButton
        android:id="@+id/play"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/start"
        android:maxWidth="40dp"
        android:text="播放音乐"
        android:layout_weight="1" />
    <ImageButton
        android:id="@+id/pause"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/pause"
        android:layout_weight="1"
        />
    <ImageButton
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/next"
        android:text="关闭音乐"
        android:layout_weight="1"
        />
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/allMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="所有音乐"
        />

</LinearLayout>
